<assembly>
    <id>config</id>
    <baseDirectory/>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <!-- copy directories -->
        <fileSet>
            <outputDirectory/>
            <directory>config</directory>
            <excludes>
                <exclude>bin/template.bat</exclude>
                <exclude>bin/template.sh</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>doc/examples</outputDirectory>
            <directory>test/resources/jobcollection</directory>
            <excludes>
                <exclude>*/expected-*.xml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>doc/examples/test_config</outputDirectory>
            <directory>test/resources/config</directory>
        </fileSet>
        <!-- generate launcher scripts -->
        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <directory>build/bin</directory>
            <lineEnding>unix</lineEnding><!-- fixme: does not work when build is launched by parent project -->
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
</assembly>