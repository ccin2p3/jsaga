<?xml version="1.0" encoding="UTF-8"?>
<JobDefinition xmlns="http://schemas.ggf.org/jsdl/2005/11/jsdl" xmlns:ext="http://www.in2p3.fr/jsdl-extension">
    <JobDescription>
        <JobIdentification>
            <JobName>test_sandbox</JobName>
        </JobIdentification>
        <Application>
            <p:POSIXApplication xmlns:p="http://schemas.ggf.org/jsdl/2005/11/jsdl-posix">
                <p:Executable>/bin/cat</p:Executable>
                <p:Input>file1.txt</p:Input>
                <p:Output>file2.txt</p:Output>
            </p:POSIXApplication>
        </Application>
        <DataStaging name="INPUT">
            <FileName>file1.txt</FileName>
            <CreationFlag>overwrite</CreationFlag>
            <Source><URI>file://./jsaga-engine/config/etc/jsaga-universe.xml</URI></Source>
            <ext:Sandbox>true</ext:Sandbox>
        </DataStaging>
        <DataStaging name="OUTPUT">
            <FileName>file2.txt</FileName>
            <CreationFlag>overwrite</CreationFlag>
            <Target><URI>file://./jsaga-engine/config/var/test_sandbox.txt</URI></Target>
            <ext:Sandbox>true</ext:Sandbox>
        </DataStaging>
    </JobDescription>
</JobDefinition>