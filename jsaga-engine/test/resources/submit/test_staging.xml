<?xml version="1.0" encoding="UTF-8"?>
<JobDefinition xmlns="http://schemas.ggf.org/jsdl/2005/11/jsdl">
    <JobDescription>
        <JobIdentification>
            <JobName>test_staging</JobName>
        </JobIdentification>
        <Application>
            <ext:ScriptApplication xmlns:ext="http://www.in2p3.fr/jsdl-extension">
                <ext:Script>/bin/cat &lt;$INPUT &gt;$OUTPUT</ext:Script>
            </ext:ScriptApplication>
        </Application>
        <DataStaging name="INPUT">
            <FileName>file1.txt</FileName>
            <CreationFlag>overwrite</CreationFlag>
            <Source><URI>file://./jsaga-engine/config/etc/jsaga-config.xml</URI></Source>
        </DataStaging>
        <DataStaging name="OUTPUT">
            <FileName>file2.txt</FileName>
            <CreationFlag>overwrite</CreationFlag>
            <Target><URI>file://./jsaga-engine/config/var/test_staging.txt</URI></Target>
        </DataStaging>
    </JobDescription>
</JobDefinition>