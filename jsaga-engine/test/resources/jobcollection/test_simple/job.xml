<?xml version="1.0" encoding="UTF-8"?>
<ext:JobCollection xmlns:ext="http://www.in2p3.fr/jsdl-extension">
    <ext:JobCollectionDescription>
        <ext:JobCollectionIdentification>
            <ext:JobCollectionName>test_simple</ext:JobCollectionName>
        </ext:JobCollectionIdentification>
        <ext:Parametric count="3" start="1" step="1"/>
    </ext:JobCollectionDescription>
    <ext:Job>
        <JobDefinition xmlns="http://schemas.ggf.org/jsdl/2005/11/jsdl">
            <JobDescription>
                <JobIdentification>
                    <JobName>MYJOB_@{INDEX}</JobName>
                </JobIdentification>
                <Application>
                    <p:POSIXApplication xmlns:p="http://schemas.ggf.org/jsdl/2005/11/jsdl-posix">
                        <p:Executable>/bin/date</p:Executable>
                        <p:Output>stdout_@{INDEX}.txt</p:Output>
                        <p:Error>stderr_@{INDEX}.txt</p:Error>
                    </p:POSIXApplication>
                </Application>
                <Resources/>
            </JobDescription>
        </JobDefinition>
    </ext:Job>
</ext:JobCollection>