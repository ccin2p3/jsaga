<?xml version="1.0" encoding="UTF-8"?>
<ext:JobCollection xmlns:ext="http://www.in2p3.fr/jsdl-extension">
    <ext:JobCollectionDescription>
        <ext:JobCollectionIdentification>
            <ext:JobCollectionName>test_saga</ext:JobCollectionName>
        </ext:JobCollectionIdentification>
        <ext:Parametric count="1" start="1" step="1"/>
    </ext:JobCollectionDescription>
    <ext:Job>
        <JobDefinition xmlns="http://schemas.ggf.org/jsdl/2005/11/jsdl">
            <JobDescription>
                <JobIdentification>
                    <JobName>test_saga</JobName>
                </JobIdentification>
                <Application>
                    <p:POSIXApplication xmlns:p="http://schemas.ggf.org/jsdl/2005/11/jsdl-posix">
                        <p:Executable filesystemName="WorkingDirectory">/bin/date</p:Executable>
                        <p:Output filesystemName="WorkingDirectory">stdout.txt</p:Output>
                        <p:Error filesystemName="WorkingDirectory">stderr.txt</p:Error>
                    </p:POSIXApplication>
                </Application>
                <Resources>
                    <FileSystem name="WorkingDirectory">
                        <FileSystemType>temporary</FileSystemType>
                        <MountPoint>.</MountPoint>
                    </FileSystem>
                </Resources>
                <DataStaging>
                    <FileName>input</FileName>
                    <FilesystemName>WorkingDirectory</FilesystemName>
                    <CreationFlag>Overwrite</CreationFlag>
                    <Source>
                        <URI>file:///input.txt</URI>
                    </Source>
                </DataStaging>
                <DataStaging>
                    <FileName>output</FileName>
                    <FilesystemName>WorkingDirectory</FilesystemName>
                    <CreationFlag>Append</CreationFlag>
                    <Target>
                        <URI>file:///output.txt</URI>
                    </Target>
                </DataStaging>
            </JobDescription>
        </JobDefinition>
    </ext:Job>
</ext:JobCollection>