<?xml version="1.0" encoding="UTF-8"?>
<ext:Job xmlns:ext="http://www.in2p3.fr/jsdl-extension">
    <ext:JobLifetimeManagement>
        <ext:Retry count="3" maxTime="PT80S" status="queued"/>
        <ext:Retry count="2" maxTime="PT6M" status="running"/>
        <ext:Retry count="1" status="failed"/>
    </ext:JobLifetimeManagement>
    <JobDefinition xmlns="http://schemas.ggf.org/jsdl/2005/11/jsdl">
        <JobDescription>
            <JobIdentification>
                <JobName>MYJOB_2</JobName>
            </JobIdentification>
            <Application>
                <posix:POSIXApplication xmlns:posix="http://schemas.ggf.org/jsdl/2005/11/jsdl-posix">
                    <posix:Executable>/bin/sh</posix:Executable>
                </posix:POSIXApplication>
            </Application>
            <Resources>
                <FileSystem name="ApplicationsDirectory">
                    <FileSystemType>normal</FileSystemType>
                    <MountPoint>$VO_BIOMED_SW_DIR</MountPoint>
                </FileSystem>
                <FileSystem name="WorkingDirectory">
                    <FileSystemType>temporary</FileSystemType>
                    <MountPoint>$HOME</MountPoint>
                </FileSystem>
                <FileSystem name="HELLOWORLD_1.1">
                    <FileSystemType>normal</FileSystemType>
                    <MountPoint>$VO_BIOMED_SW_DIR/HelloWorld/1.1</MountPoint>
                </FileSystem>
            </Resources>
            <DataStaging name="C0">
                <FileName>$HOME/config0.cfg</FileName>
                <FilesystemName>$HOME</FilesystemName>
                <CreationFlag>overwrite</CreationFlag>
                <DeleteOnTermination>true</DeleteOnTermination>
                <Source>
                    <URI>gsiftp://defaultSE.egee.org/tmp/test_staging_egee.in/config0.cfg#EGEE</URI>
                </Source>
                <ext:Step uri="file:///tmp/config0.cfg">
                    <ext:Step uri="gsiftp://defaultSE.egee.org/tmp/test_staging_egee.in/config0.cfg#EGEE"/>
                </ext:Step>
                <ext:CopyLocally>false</ext:CopyLocally>
                <ext:Shared>true</ext:Shared>
            </DataStaging>
            <DataStaging name="C1">
                <FileName>$HOME/config1.cfg</FileName>
                <FilesystemName>$HOME</FilesystemName>
                <CreationFlag>overwrite</CreationFlag>
                <DeleteOnTermination>true</DeleteOnTermination>
                <Source>
                    <URI>gsiftp://defaultSE.egee.org/tmp/test_staging_egee.in/config1.cfg#EGEE</URI>
                </Source>
                <ext:Step uri="srb://sreynaud@host2:5544/grid/config1.cfg?mydomain#OpenPlast-CCIN2P3">
                    <ext:Step uri="file://c:/tmp/test_staging_egee.in/config1.cfg">
                        <ext:Step uri="gsiftp://defaultSE.egee.org/tmp/test_staging_egee.in/config1.cfg#EGEE"/>
                    </ext:Step>
                </ext:Step>
                <ext:CopyLocally>false</ext:CopyLocally>
                <ext:Shared>true</ext:Shared>
            </DataStaging>
            <DataStaging name="C2">
                <FileName>$HOME/config2.cfg</FileName>
                <FilesystemName>$HOME</FilesystemName>
                <CreationFlag>overwrite</CreationFlag>
                <DeleteOnTermination>true</DeleteOnTermination>
                <Source>
                    <URI>gsiftp://defaultSE.egee.org/tmp/test_staging_egee.in/config2.cfg#EGEE</URI>
                </Source>
                <ext:Step uri="http://host5:8080/public/configuration/config2.cfg">
                    <ext:Step uri="file://c:/tmp/test_staging_egee.in/config2.cfg">
                        <ext:Step uri="gsiftp://defaultSE.egee.org/tmp/test_staging_egee.in/config2.cfg#EGEE"/>
                    </ext:Step>
                </ext:Step>
                <ext:CopyLocally>false</ext:CopyLocally>
                <ext:Shared>true</ext:Shared>
            </DataStaging>
            <DataStaging name="E">
                <FileName>$VO_BIOMED_SW_DIR/HelloWorld/1.1/bin/executable.exe</FileName>
                <FilesystemName>$VO_BIOMED_SW_DIR/HelloWorld/1.1</FilesystemName>
                <CreationFlag>dontOverwrite</CreationFlag>
                <DeleteOnTermination>true</DeleteOnTermination>
                <Source/>
                <ext:CopyLocally>false</ext:CopyLocally>
                <ext:Shared>true</ext:Shared>
            </DataStaging>
            <!-- alternative E removed -->
            <DataStaging name="D">
                <FileName>$HOME/data.dat</FileName>
                <FilesystemName>$HOME</FilesystemName>
                <CreationFlag>overwrite</CreationFlag>
                <DeleteOnTermination>true</DeleteOnTermination>
                <Source>
                    <URI>gsiftp://defaultSE.egee.org/tmp/test_staging_egee.in/data_2.dat#EGEE</URI>
                </Source>
                <ext:Step uri="gsiftp://host4:2811/data/data_2.dat#OpenPlast">
                    <ext:Step uri="file://c:/tmp/test_staging_egee.in/data_2.dat">
                        <ext:Step uri="gsiftp://defaultSE.egee.org/tmp/test_staging_egee.in/data_2.dat#EGEE"/>
                    </ext:Step>
                </ext:Step>
                <ext:CopyLocally>false</ext:CopyLocally>
                <ext:Shared>false</ext:Shared>
            </DataStaging>
            <DataStaging name="R">
                <FileName>$HOME/result.dat</FileName>
                <FilesystemName>$HOME</FilesystemName>
                <CreationFlag>overwrite</CreationFlag>
                <DeleteOnTermination>true</DeleteOnTermination>
                <Target>
                    <URI>gsiftp://defaultSE.egee.org/tmp/test_staging_egee.out/MYJOB_2/result_2.dat#EGEE</URI>
                </Target>
                <ext:Step uri="mail://sreynaud@in2p3.fr/result_2.dat">
                    <ext:Step uri="file://c:/tmp/test_staging_egee.out/MYJOB_2/result_2.dat">
                        <ext:Step uri="gsiftp://defaultSE.egee.org/tmp/test_staging_egee.out/MYJOB_2/result_2.dat#EGEE"/>
                    </ext:Step>
                </ext:Step>
                <ext:CopyLocally>false</ext:CopyLocally>
                <ext:Shared>false</ext:Shared>
            </DataStaging>
            <DataStaging name="STDERR">
                <FileName>$HOME/stderr.txt</FileName>
                <FilesystemName>$HOME</FilesystemName>
                <CreationFlag>overwrite</CreationFlag>
                <DeleteOnTermination>true</DeleteOnTermination>
                <Target>
                    <URI>gsiftp://defaultSE.egee.org/tmp/test_staging_egee.out/MYJOB_2/stderr_2.txt#EGEE</URI>
                </Target>
                <ext:Step uri="file:///tmp/stderr_2.txt">
                    <ext:Step uri="gsiftp://defaultSE.egee.org/tmp/test_staging_egee.out/MYJOB_2/stderr_2.txt#EGEE"/>
                </ext:Step>
                <ext:CopyLocally>false</ext:CopyLocally>
                <ext:Shared>false</ext:Shared>
            </DataStaging>
        </JobDescription>
    </JobDefinition>
</ext:Job>