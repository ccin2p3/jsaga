<?xml version="1.0" encoding="UTF-8"?>
<ext:Job xmlns:ext="http://www.in2p3.fr/jsdl-extension">
    <JobDefinition xmlns="http://schemas.ggf.org/jsdl/2005/11/jsdl">
        <JobDescription>
            <JobIdentification>
                <JobName>test_DataStaging</JobName>
            </JobIdentification>

            <DataStaging name="EXEC">
                <FileName>/usr/local/bin/myprog.exe</FileName>
                <FilesystemName>/usr/local</FilesystemName>
                <CreationFlag>dontOverwrite</CreationFlag>
                <Source/>
            </DataStaging>
            <DataStaging name="EXEC">
                <FileName>$PWD/myjob/myprog.exe</FileName>
                <FilesystemName>$PWD</FilesystemName>
                <CreationFlag>overwrite</CreationFlag>
                <Source>
                    <URI>gsiftp://host:2811/grid/repository/myprog.c</URI>
                    <ext:Process>gcc -o $EXEC $SOURCE</ext:Process>
                </Source>
            </DataStaging>

            <DataStaging name="RESULT">
                <FileName>$PWD/myjob/result.dat</FileName>
                <FilesystemName>$PWD</FilesystemName>
                <CreationFlag>overwrite</CreationFlag>
                <Target>
                    <URI>gsiftp://host:2811/grid/home/result.dat.gz</URI>
                    <ext:Process>gzip -c $RESULT &gt; $TARGET</ext:Process>
                </Target>
            </DataStaging>
        </JobDescription>
    </JobDefinition>
</ext:Job>