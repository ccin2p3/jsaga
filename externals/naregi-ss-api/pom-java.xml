<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <!-- built from source because we need to patch ConfigManager -->
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.naregi.ss</groupId>
    <artifactId>naregi-ss-api</artifactId>
    <version>current</version>
    <name>NAREGI Super Scheduler Client API (from sub-directory naregi2)</name>
    <url>http://rpm1.naregi.org/index_beta2.html</url>
    <build>
        <directory>build</directory>
        <outputDirectory>build/classes</outputDirectory>
        <sourceDirectory>java</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-file-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-jar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>
                                    <source>${project.build.directory}/${artifactId}-${version}.jar</source>
                                    <destination>${basedir}/${artifactId}.jar</destination>
                                </file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<executions>
					<execution>
						<phase>clean</phase>
					</execution>
				</executions>
				<configuration>
					<filesets>
						<fileset>
							<directory>${basedir}</directory>
							<includes>
								<include>${artifactId}.jar</include>
							</includes>
							<followSymlinks>false</followSymlinks>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.globus</groupId>
            <artifactId>wsgram-api</artifactId>
            <version>4.0.0</version>
        </dependency>
    </dependencies>
</project>