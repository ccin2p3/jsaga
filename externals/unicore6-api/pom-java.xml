<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>fr.in2p3.jsaga</groupId>
        <artifactId>externals-java</artifactId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../pom-java.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>de.fzj.unicore</groupId>
    <artifactId>unicore6-api</artifactId>
    <version>6.1</version>
	<packaging>pom</packaging>
	<name>Unicore 6.1 external libraries (java)</name>
	<description>These are the external libraries for the Unicore 6.1 adaptor.</description>
    <url>http://www.unicore.eu</url>
	<build>
		<directory>build</directory>
	    <outputDirectory>build</outputDirectory>
	 	<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
					<executions>
					    <execution>
							<phase>package</phase>
							<goals>
								<goal>assembly</goal>
	                        </goals>
		                </execution>
			        </executions>
			        <configuration>
						<descriptors>
				            <descriptor>assembly.xml</descriptor>
			          </descriptors>
			        </configuration>
		    </plugin>
			<plugin><!-- copy jar -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
            </plugin>
		</plugins>
	</build>
	<dependencies>
        <dependency>
			<groupId>com.intel.gpe</groupId>
            <artifactId>gpe-commons</artifactId>
            <version>1.5.0</version>
		</dependency>
		<dependency>
			<groupId>com.intel.gpe</groupId>
            <artifactId>gpe-shared-clients</artifactId>
            <version>1.4.3</version>
		</dependency>
		<dependency>
			<groupId>com.intel.gpe</groupId>
            <artifactId>gpe-wsclient</artifactId>
            <version>1.5.0</version>
		</dependency>
		 <dependency>
			<groupId>com.intel.gpe</groupId>
            <artifactId>gpe4unicore-client</artifactId>
            <version>1.4.3</version>
		</dependency>
        <dependency>
			<groupId>pl.edu.icm.unicore.security</groupId>
            <artifactId>securityLibrary</artifactId>
            <version>1.1</version>
		</dependency>
	</dependencies>
	<modules>
		<module>wsrf-types</module>
		<module>uas-types</module>
		<module>saml-types</module>
		<module>jsdl-types</module>
	</modules>
</project>