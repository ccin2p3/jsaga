<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.unicore</groupId>
    <artifactId>uas-types</artifactId>
    <version>1.2</version>
    <name>UAS types for Unicore 6.1</name>
    <build>
        <plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>xmlbeans-maven-plugin</artifactId>
				<version>2.2.0</version>
				<executions>
					<execution>
						<goals>
							<goal>xmlbeans</goal>
						</goals>
					</execution>
				</executions>
				<inherited>true</inherited>
				<configuration>
					<schemaDirectory>${basedir}/resources/wsdl/uas-types</schemaDirectory>
					<xmlConfigs>					
						<xmlConfig implementation="java.io.File">
							${basedir}/resources/wsdl/uas-types/xmlbeans_config.xsdconfig
						</xmlConfig>
					</xmlConfigs>
					<noUpa>true</noUpa>
				</configuration>
			</plugin>
        </plugins>
    </build>
	<dependencies>
		<dependency>
			<groupId>de.fzj.unicore</groupId>
			<artifactId>wsrf-types</artifactId>
			<version>1.4</version>
			<exclusions>
				<exclusion>
				  <groupId>xmlbeans</groupId>
				  <artifactId>xmlbeans-jsr173-api</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<artifactId>jsdl-types</artifactId>
			<groupId>de.fzj.unicore</groupId>
			<version>1.1</version>
		</dependency>
	</dependencies>
</project>