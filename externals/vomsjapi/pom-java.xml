<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <!-- built from source because we need a jar compliant with jdk 1.4 -->
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.glite</groupId>
    <artifactId>vomsjapi</artifactId>
    <version>current</version>
    <name>VOMS library</name>
    <url>http://edg-wp2.web.cern.ch/edg-wp2/security/voms/voms.html</url>
    <build>
        <directory>java/build</directory>
        <outputDirectory>java/build/classes</outputDirectory>
        <sourceDirectory>java/src</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-file-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-jar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>
                                    <source>${project.build.directory}/${artifactId}-${version}.jar</source>
                                    <destination>${basedir}/${artifactId}.jar</destination>
                                </file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.globus</groupId>
            <artifactId>cog-jglobus</artifactId>
            <version>1.2</version>
        </dependency>
        <!-- for build -->
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
        </dependency>
        <dependency>
            <groupId>commons-cli</groupId>
            <artifactId>commons-cli</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.3</version>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1</version>
            <scope>runtime</scope>
        </dependency>
    </dependencies>
</project>