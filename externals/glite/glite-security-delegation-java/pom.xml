<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>fr.in2p3.jsaga</groupId>
        <artifactId>glite</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.glite</groupId>
    <artifactId>glite-security-delegation-java</artifactId>
    <version>1.4.4-1</version>
    <name>Glite Security delegation</name>
    
    <repositories>
    	<!-- CNAF repos for glite/EMI libs (https://github.com/italiangrid) -->
    	<repository>
			<id>cnaf-releases</id>
			<name>CNAF releases</name>
			<url>http://radiohead.cnaf.infn.it:8081/nexus/content/repositories/cnaf-releases/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>cnaf-snapshots</id>
			<name>CNAF snapshots</name>
			<url>http://radiohead.cnaf.infn.it:8081/nexus/content/repositories/cnaf-snapshots/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>fail</checksumPolicy>
			</snapshots>
		</repository>
	</repositories>
    <dependencies>    
        <dependency>
            <groupId>org.glite</groupId>
            <artifactId>glite-security-util-java</artifactId>
            <version>1.4.0</version>
        </dependency>
        <dependency>
			<groupId>org.italiangrid</groupId>
			<artifactId>voms-api-java</artifactId>
			<version>3.0-SNAPSHOT</version>
		</dependency>
        <dependency>
            <groupId>org.glite</groupId>
            <artifactId>glite-security-trustmanager-axis</artifactId>
            <version>1.8.16</version>
        </dependency>
    </dependencies>
</project>
