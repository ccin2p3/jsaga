<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
    <groupId>org.glite</groupId>
    <artifactId>wms-lb-api</artifactId>
	<!-- WSDL 3.1.2 Version / API 3.1.0 Version -->
    <version>3.1</version>
    <name>WMS-LB library</name>
    <url>https://grid.ct.infn.it/twiki/bin/view/GILDA/ApiJavaWMProxy</url>
	<build>
		<directory>build</directory>
        <outputDirectory>build/classes</outputDirectory>
        <sourceDirectory>java</sourceDirectory>
		<plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>axistools-maven-plugin</artifactId>
                <!--<version>1.0</version>--><!-- axis 1.2.1 -->
                <version>1.1</version><!-- axis 1.4 -->
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>wsdl2java</goal>
                        </goals>
                        <configuration>
                            <sourceDirectory>${basedir}/resources/wsdl</sourceDirectory>
                            <outputDirectory>${project.build.directory}/generated-sources</outputDirectory>
                            <timestampDirectory>${project.build.directory}</timestampDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
		</plugins>
    </build>
    <dependencies>
         <!-- adaptor specific -->
        <dependency>
            <groupId>axis</groupId>
            <artifactId>axis</artifactId>
            <version>1.4</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
        </dependency>
        <dependency>
            <groupId>org.glite</groupId>
            <artifactId>glite-security-delegation-java</artifactId>
            <version>3.1</version>
        </dependency>
        <dependency>
            <groupId>org.glite</groupId>
            <artifactId>glite-security-trustmanager</artifactId>
            <version>3.1</version>
        </dependency>
		<dependency>
            <groupId>org.globus</groupId>
            <artifactId>cog-jglobus</artifactId>
            <version>1.4</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.globus</groupId>
            <artifactId>cog-axis</artifactId>
            <version>gt4</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
</project>