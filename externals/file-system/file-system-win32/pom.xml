<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <name>C for Windows</name>
    <parent>
        <groupId>fr.in2p3.commons.filesystem</groupId>
        <artifactId>file-system</artifactId>
        <version>1.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>fr.in2p3.commons.filesystem</groupId>
    <artifactId>file-system-win32</artifactId>
    <version>1.0</version>
    <packaging>dll</packaging>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>native-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <javahOS>win32</javahOS>
                    <compilerExecutable>c:/cygwin/bin/g++-3.exe</compilerExecutable>
                    <linkerExecutable>c:/cygwin/bin/g++-3.exe</linkerExecutable>
                    <compilerStartOptions>
                        <compilerStartOption>-mno-cygwin</compilerStartOption>
                    </compilerStartOptions>
                    <linkerStartOptions>
                        <linkerStartOption>-mno-cygwin</linkerStartOption>
                        <linkerStartOption>-shared</linkerStartOption>
                        <linkerStartOption>-Wl,--add-stdcall-alias</linkerStartOption>
                    </linkerStartOptions>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <forkMode>once</forkMode>
                    <environmentVariables>
                        <path>${project.build.directory};${java.library.path}</path>
                    </environmentVariables>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
