<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.globus</groupId>
    <artifactId>ws-delegation</artifactId>
    <version>4.0.0</version>
    <name>Stubs for WS Delegation service</name>
    <build>
		<sourceDirectory>java</sourceDirectory>
		<resources>
			<resource>
				<directory>resources</directory>
			</resource>
		</resources>
        <plugins>
            <plugin>
				<artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
						<phase>generate-sources</phase>
                        <configuration>
							<tasks>
							 <property name="compile_classpath" refid="maven.compile.classpath"/>
								<!-- Build stubs for ws-delegation-common -->
						        <ant antfile="${basedir}/config/globus_wsrf_build_stubs.xml" target="generateStubs">
									<property name="source.stubs.dir" 
									location="${basedir}/resources/wsdl/schema/delegationService"/>
									<property name="target.stubs.dir" location="${project.build.directory}/generated-sources"/>
									<property name="wsdl.file" 
										 value="delegation_factory_service.wsdl"/>
								</ant>

								<ant antfile="${basedir}/config/globus_wsrf_build_stubs.xml" target="generateStubs">
									<property name="source.stubs.dir" 
									location="${basedir}/resources/wsdl/schema/delegationService"/>
									<property name="target.stubs.dir" location="${project.build.directory}/generated-sources"/>
									<property name="wsdl.file" value="delegation_service.wsdl"/>
								</ant>

								<ant antfile="${basedir}/config/globus_wsrf_build_stubs.xml" target="generateStubs">
									<property name="source.stubs.dir" 
									location="${basedir}/resources/wsdl/schema/delegationService/test"/>
									<property name="target.stubs.dir" location="${project.build.directory}/generated-sources"/>
									<property name="wsdl.file" value="delegation_test_service.wsdl"/>
								</ant>
							</tasks>
							<sourceRoot>${project.build.directory}/generated-sources</sourceRoot>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
                    </execution>	
				</executions>
            </plugin>
		</plugins>
    </build>
    <dependencies>
        <!-- adaptor specific -->
		<dependency>
            <groupId>org.globus</groupId>
            <artifactId>wsrf-core</artifactId>
            <version>4.0.0</version>
        </dependency>
    </dependencies>
</project>