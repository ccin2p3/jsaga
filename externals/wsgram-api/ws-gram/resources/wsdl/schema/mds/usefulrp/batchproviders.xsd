<complexType name="ClusterCollectionType">
  <annotation><documentation>
    Internal type for cluster info APIs
  </documentation></annotation>
  <sequence>
      <element minOccurs="0" maxOccurs="unbounded" ref="ce:Cluster"/>
  </sequence>
</complexType>





