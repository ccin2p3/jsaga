<?xml version="1.0" encoding="UTF-8"?>
<jsaga-default xmlns="http://www.in2p3.fr/jsaga/session">
    <contexts>
         <context type="VOMS">
            <attribute name="UserProxy" value="${user.home}/.jsaga/contexts/rOCCI/proxy"/>
            <!-- <attribute name="UserCert" value="${user.home}/.jsaga/contexts/rOCCI/id_rOCCI.pub"/> -->
            <!-- <attribute name="UserKey" value="${user.home}/.jsaga/contexts/rOCCI/id_rOCCI"/> -->
            <attribute name="CertRepository" value="${user.home}/.jsaga/contexts/voms/certificates/"/>
            <job type="rocci"/>
        </context>
        <context type="SSH">
            <attribute name="UserID" value="root"/>
            <attribute name="UserKey" value="${user.home}/.jsaga/contexts/rOCCI/id_rOCCI"/>
            <attribute name="UserCert" value="${user.home}/.jsaga/contexts/rOCCI/id_rOCCI.pub"/>
            <data type="sftp">
                <attribute name="KnownHosts" value=""/>
            </data>
        </context>
    </contexts>
    <session>
        <context type="VOMS"/>
        <context type="SSH"/>
    </session>
</jsaga-default>