<?xml version="1.0" encoding="UTF-8"?>
<jsaga-default xmlns="http://www.in2p3.fr/jsaga/session">
    <contexts>
        <context type="VOMS">
            <attribute name="Server" value="voms://lcg-voms.cern.ch:15004/DC=ch/DC=cern/OU=computers/CN=lcg-voms.cern.ch"/>
            <attribute name="CertRepository" value="${user.home}/.jsaga/contexts/voms/certificates/"/>
            <attribute name="VomsDir" value="${user.home}/.jsaga/contexts/voms/vomsdir/"/>
            <attribute name="UserVO" value="dteam"/>

            <!-- todo: enable support for proxy at a non default location -->
            <!--<attribute name="UserProxy" value="${user.home}/.jsaga/tmp/dteam_cred.txt"/>-->

            <!-- fixme: signer certificate expires earlier than the delegated proxy if VOMS lifetime is lower than  12H -->
            <attribute name="LifeTime" value="PT13H"/>

            <job type="cream"/>
        </context>
    </contexts>
    <session>
        <context type="VOMS"/>
    </session>
</jsaga-default>