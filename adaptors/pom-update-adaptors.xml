<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>fr.in2p3.jsaga.poms</groupId>
    <artifactId>pom-update-adaptors</artifactId>
    <version>1.0</version>
    <packaging>pom</packaging>
    <description>Run "mvn -f pom-update-adaptors.xml validate" when pom.xml is modified.</description>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
		        <artifactId>xml-maven-plugin</artifactId>
		        <executions>
		          <execution>
                    <phase>validate</phase>
		            <goals>
		              <goal>transform</goal>
		            </goals>
		          </execution>
		        </executions>
		        <configuration>
		          <transformationSets>
		            <transformationSet>
		              <dir>.</dir>
		              <includes><include>pom.xml</include></includes>
		              <stylesheet>src/aggregate.xsl</stylesheet>
		              <outputDir>../jsaga-adaptors/</outputDir>
		            </transformationSet>
		          </transformationSets>
		        </configuration>
		      </plugin>
        </plugins>
    </build>
</project>