<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>bin</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <baseDirectory>jsaga-${version}</baseDirectory>
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputFileNameMapping>/</outputFileNameMapping>
            <unpack>true</unpack>
            <includes>
                <include>fr.in2p3.jsaga:jsaga-engine:zip:config</include>
                <include>org.graphviz:graphviz:zip:bin</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <outputDirectory>/bin/panels</outputDirectory>
            <destName>OptionalLicencePanel.jar</destName>
            <source>${project.build.directory}/${project.build.finalName}.jar</source>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>assembly/licenses/License-LGPLv3.txt</source>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>assembly/licenses/License-CDDLv1.0.txt</source>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>assembly/Readme.txt</source>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>assembly/post-install.sh</source>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
        </file>
    </files>
</assembly>