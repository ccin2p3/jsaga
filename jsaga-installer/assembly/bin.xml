<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>bin</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <baseDirectory>jsaga-${version}</baseDirectory>
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputFileNameMapping>/</outputFileNameMapping>
            <unpack>true</unpack>
            <includes>
                <include>fr.in2p3.jsaga:jsaga-engine:zip:config</include>
                <include>org.graphviz:graphviz:zip:bin</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>fr.in2p3.jsaga:jsaga-engine:jar</include>
                <include>fr.in2p3.jsaga:jsaga-adaptoritf:jar</include>
                <include>org.ogf.saga:saga-api:jar</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib-adaptors</outputDirectory>
            <unpack>false</unpack>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <excludes>
                <exclude>fr.in2p3.jsaga:jsaga-engine</exclude>
                <exclude>fr.in2p3.jsaga:jsaga-adaptoritf:jar</exclude>
                <exclude>org.ogf.saga:saga-api:jar</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>assembly/Licence.txt</source>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>assembly/Readme.txt</source>
        </file>
    </files>
</assembly>