<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>bin</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <baseDirectory>jsaga-${version}</baseDirectory>
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputFileNameMapping>/</outputFileNameMapping>
            <unpack>true</unpack>
            <includes>
                <include>fr.in2p3.jsaga:jsaga-engine:zip:config</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <scope>test</scope>
            <excludes>
                <exclude>fr.in2p3.jsaga:jsaga-engine:zip:config</exclude>
                <exclude>org.codehaus.izpack:izpack-standalone-compiler:jar</exclude>
                <exclude>fr.in2p3.jsaga:jsaga-installer:jar</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory>/doc</outputDirectory>
            <directory>test/resources</directory>
        </fileSet>
    </fileSets>
    <files>
        <!-- <file>
            <outputDirectory>/bin/panels</outputDirectory>
            <destName>OptionalLicencePanel.jar</destName>
            <source>${project.build.directory}/${project.build.finalName}.jar</source>
        </file> -->
        <file>
            <outputDirectory>/</outputDirectory>
            <source>assembly/licenses/License-LGPLv3.txt</source>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>assembly/licenses/License-CDDLv1.0.txt</source>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>assembly/licenses/License-Apachev2.0.txt</source>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>assembly/Readme.txt</source>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>assembly/post-install.sh</source>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
        </file>
    </files>
</assembly>
