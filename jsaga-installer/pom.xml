<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <!-- declaration -->
    <parent>
        <groupId>fr.in2p3.parent</groupId>
        <artifactId>in2p3-root-pom</artifactId>
        <version>current</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>fr.in2p3.jsaga</groupId>
    <artifactId>jsaga-installer</artifactId>
    <version>0.9.2-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>JSAGA Installer</name>
    <description>JSAGA is a Java implementation of the Simple API for Grid Applications (SAGA)</description>

    <!-- web site -->
    <developers>
        <developer>
            <name>Sylvain REYNAUD</name>
            <email>sreynaud@in2p3.fr</email>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
        </developer>
        <developer>
            <name>Nicolas DEMESY</name>
            <email>nicolas.demesy@bt.com</email>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
        <developer>
            <name>Youri TCHINDA DJOU</name>
            <email>ytchinda@in2p3.fr</email>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
    </developers>
    <distributionManagement>
        <site>
            <url>${site.upload.root}</url>
        </site>
    </distributionManagement>

    <!-- izPack -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependserializer-plugin</artifactId>
                <executions>
                    <execution>
                        <id>serialize-dependencies</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>serialize</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xslt-maven-plugin</artifactId>
                <version>1.0</version>
                <configuration>
                    <xslFile>assembly/izpack.xsl</xslFile>
                    <srcDir>${project.build.directory}</srcDir>
                    <srcIncludes>dependencies.xml</srcIncludes>
                    <destDir>${project.build.directory}</destDir>
                    <fileNameRegex>dependencies</fileNameRegex>
                    <fileNameReplacement>izpack</fileNameReplacement>
                </configuration>
                <executions>
                    <execution>
                        <id>generate-izpack-descriptor</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>transform</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>assembly/bin.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>prepare-izPack</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attached</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-izpack-plugin</artifactId>
                <configuration>
                    <descriptor>${project.build.directory}/izpack.xml</descriptor>
                    <basedir>${project.build.directory}/${project.artifactId}-${project.version}-bin.dir/jsaga-${project.version}/</basedir>
                </configuration>
                <executions>
                    <execution>
                        <id>izpack</id>
                        <phase>package</phase>
                        <goals>
                            <goal>izpack</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-statistic-plugin</artifactId>
                <configuration>
                    <root>..</root>
                </configuration>
            </plugin>
        </plugins>
    </reporting>
